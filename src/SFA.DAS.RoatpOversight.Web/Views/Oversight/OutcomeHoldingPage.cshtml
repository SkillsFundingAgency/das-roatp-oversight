@using SFA.DAS.AdminService.Common.Extensions;
@model SFA.DAS.RoatpOversight.Web.ViewModels.OutcomeStatusViewModel
@{
    ViewData["Title"] = "Outcome - Holding page";
}
@{
    var formGroupError = Model.ErrorMessages != null && Model.ErrorMessages.Any() ? "govuk-form-group--error" : "";
}

<div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" asp-controller="Home" asp-action="Dashboard">RoATP dashboard</a>
        </li>
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" asp-controller="Oversight" asp-action="Applications">RoATP application outcomes</a>
        </li>
        <li class="govuk-breadcrumbs__list-item" aria-current="page">Overall outcome</li>
    </ol>
</div>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            <li>
                                @foreach (var error in Model.ErrorMessages)
                                {
                                    <a href="#OptionYes">@error.ErrorMessage</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            }

            @{
                var radioCheckedYes = Model.AreYouSureStatus?.ToLower() == "yes" ? "checked" : "";
                var radioCheckedNo = Model.AreYouSureStatus?.ToLower() == "no" ? "checked" : "";
            }


            <form asp-action="Successful" asp-controller="Oversight">
                <input type="hidden" asp-for="ApplicationId" />
                <div class="govuk-form-group @formGroupError">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <span class="govuk-caption-xl">Overall outcome</span>
                            <h1 class="govuk-heading-xl">Are you sure this is a XXX application? HOLDING PAGE</h1>
                        </legend>


                        <div>Gateway approval: @Model.ApproveGateway</div>
                        <div>Moderation approval: @Model.ApproveModeration</div>
                        <div>Oversight Status: @Model.OversightStatus</div>

                    </fieldset>
                </div>

                @* <button class="govuk-button" type="submit" data-module="govuk-button"> *@
                @*     Save and continue *@
                @* </button> *@

            </form>
        </div>
    </div>
</main>